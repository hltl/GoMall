{{define "cart-num"}}
<a href="/cart" class="btn position-relative">
    <i class="fa-solid fa-cart-shopping ms-auto" style="font-size: 1.5rem">
    </i>
    {{ if $.cart_num}}
    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        {{ $.cart_num }}
        {{ end }}
    </span>
</a>
{{end}}