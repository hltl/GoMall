{{template "header" .}}

<main>
  <div class="container-fluid">
    <div class="row">
      {{range .Items}}
      <div class="card col-xl-3 col-lg-4 col-md-6 col-sm-12 p-auto border-0" style="width: 18rem;">
        <img src="/static/image/test1.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-text">{{.Name}}</p>
          <h5 class="card-title">{{.Price}}</h5>
          <a href="#" class="btn btn-primary">buy</a>
        </div>
      </div>
      {{end}}
    </div>
  </div>
</main>

{{template "footer" .}}